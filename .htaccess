# Deshabilitar el listado de directorios en la carpeta /frontend/
# Options -Indexes  # Comentado: puede no estar permitido en hosting compartido

RewriteEngine On

# Redirigir todas las solicitudes que comienzan con /api al backend
RewriteCond %{REQUEST_URI} ^/api
RewriteRule ^api/(.*)$ /backend/public/index.php/$1 [L]

# Redirigir assets a frontend/assets
RewriteRule ^assets/(.*)$ /frontend/assets/$1 [L]

# Redirigir images a frontend/images
RewriteRule ^images/(.*)$ /frontend/images/$1 [L]

# Redirigir vite.svg a frontend/vite.svg
RewriteRule ^vite\.svg$ /frontend/vite.svg [L]

# Si la solicitud es a la ra√≠z, redirigir a index.html en frontend
RewriteRule ^$ /frontend/index.html [L]

# Redirigir al frontend si no es un archivo o directorio real (SPA fallback)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /frontend/index.html [L]


